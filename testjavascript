<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Date Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 300px;
            margin: 0 auto;
        }
        input, button {
            display: block;
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Date Calculator</h1>
        <label for="date-input">Enter a date:</label>
        <input type="date" id="date-input">
        <button onclick="calculateDate()">Calculate</button>
        <p id="result"></p>
    </div>
    <script>
        function calculateDate() {
            const inputDate = document.getElementById('date-input').value;
            if (inputDate) {
                const date = new Date(inputDate);
                date.setDate(date.getDate() + 30);
                const resultDate = date.toISOString().split('T')[0];
                document.getElementById('result').innerText = `The date 30 days later is: ${resultDate}`;
            } else {
                document.getElementById('result').innerText = 'Please enter a valid date.';
            }
        }
    </script>
</body>
</html>
